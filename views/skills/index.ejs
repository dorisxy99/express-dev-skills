<%- include('../partials/header') %>

<h1>My Dev Skills</h1>
<ul>
  <% skills.forEach(function(s) { %>
    <li>
      <form
      action="/skills/<%= s.id %>?_method=DELETE"
      method="POST"
      class="delete-form"
    >
      <button type="submit">delete</button>
    </form>
    <!-- <button type="submit">uncheck</button> -->
      <a href="/skills/<%= s.id %>">
        <%= s.skill %>
          - 
        <%= s.mastered ? 'Yes' : 'No' %>
      </a>
    </li>
  <% }); %>
</ul>

<%- include('../partials/footer') %>